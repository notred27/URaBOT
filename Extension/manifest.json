{
    "manifest_version": 3,
    "name": "URaBOT",
    "version": "1.1.2",
    "author": "notred27",
    "description": "An extension for detecting and hiding bot content on Twitter.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "38": "icons/icon38.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon128.png",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://mreidy3-urabot.hf.space/*",
        "https://bsky.app/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://x.com/*"],
            "js": ["content.js"],
            "css": ["rabotStyles.css"]
        },
        {
            "matches": ["https://bsky.app/*"],
            "js": ["content.js"],
            "css": ["bsky_styles.css"]
        }
    ]
}